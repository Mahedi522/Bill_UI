@model IEnumerable<Bill_UI.Models.Product>

@{
    ViewData["Title"] = "GetProducts";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">All Products</h1>
    <div>
        <a class="btn btn-info" asp-action="Create">Create New</a>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Code</th>
            <th>Name</th>
            <th>Rate</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Code</td>
                <td>@item.Name</td>
                <td>@item.Rate</td>
                <td>
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-custom btn-sm me-1 dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>Option
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Edit</a></li>
                            <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.Id">Details</a></li>
                            <li><a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
